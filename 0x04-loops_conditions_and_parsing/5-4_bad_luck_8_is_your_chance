#!/usr/bin/env bash
# This script loops from 1 to 10 and displays "bad luck" on 4th iteration, "good luck" on 8th iteration, and "Best School" for all others
i=1
while [ $i -le 10 ]
do
    if [ $i -eq 4 ]
    then
        echo "bad luck"
    elif [ $i -eq 8 ]
    then
        echo "good luck"
    else
        echo "Best School"
    fi
    ((i++))
done
